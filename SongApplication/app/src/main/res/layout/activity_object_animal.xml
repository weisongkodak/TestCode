<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_okhttp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_objectAnimator_start"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="song" />

            <Button
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start"
                android:visibility="invisible" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="start" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relty_objectAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/lily_objectAnimator1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="btn1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="222222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3333333333" />
        </LinearLayout>

        <Button
            android:id="@+id/btn1Clone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="btn1Clone"
            android:visibility="invisible" />


        <LinearLayout
            android:id="@+id/lily_objectAnimator2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1Clone"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="btn2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="222222222" />
        </LinearLayout>

        <Button
            android:id="@+id/btn2Clone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/btn1Clone"
            android:hint="btn2Clone"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lily_objectAnimator3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn2Clone"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="btn3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111111" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="222222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3333333" />
        </LinearLayout>

        <Button
            android:id="@+id/btn3Clone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/btn2Clone"
            android:hint="btn2Clone"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/btn3Clone"
            android:background="#ffffff"
            android:text="asdfasdfasdfsdf" />

    </RelativeLayout>


    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:hint="ok" />
</RelativeLayout>
