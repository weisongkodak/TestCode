<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x400"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_permission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x15"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_permission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center"
            android:text="permission dialog"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_permission_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:layout_margin="@dimen/x10"
            android:scrollbars="vertical"
            android:text="asdf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_permission_negative"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:background="#00000000"
                    android:gravity="center"
                    android:text="not now"
                    android:textColor="#804e5665" />

                <Button
                    android:id="@+id/btn_permission_positive"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:background="#4e5665"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>